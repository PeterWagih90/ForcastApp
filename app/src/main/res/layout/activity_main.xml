<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.peter.code.labe.alexaweather.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="2.10"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Detailed forcast Day/Night"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <source.labe.code.peter.com.cairoweather.HorizontalListView
            android:id="@+id/horizontalScrollView1"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:divider="@android:color/holo_orange_dark"
    android:dividerHeight="4dp"
            android:layout_height="0dp" >
        </source.labe.code.peter.com.cairoweather.HorizontalListView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/ic_left" />

        <TextView
            android:id="@+id/lastChecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:text="9:00 pm"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ic_right" />

    </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/holo_blue_light"
            android:layout_weight="0.10" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Simple forcast"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <source.labe.code.peter.com.cairoweather.HorizontalListView
            android:id="@+id/horizontalScrollView2"
           
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" >
        </source.labe.code.peter.com.cairoweather.HorizontalListView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/ic_left" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/ic_right" />
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>